@model ProjectChapeau.Models.MenuItem

@{
	ViewData["Title"] = "Add Menu Item";
	string? errorMessage = (string)ViewData["ErrorMessage"];
}

<h4>@errorMessage</h4>

<h2>Add New Menu Item</h2>

<form action="/MenuItem/Add" method="POST">

	<div class="form-group py-2">
		<label for="ItemName">Item Name:</label>
		<input type="text" id="ItemName" name="ItemName" class="form-control" required value="@Model?.ItemName" />
	</div>

	<div class="form-group py-2">
		<label for="Price">Price:</label>
		<input type="number" id="Price" name="Price" class="form-control" required value="@Model?.Price" />
	</div>

	<div class="form-group py-2">
		<label for="Stock">Stock:</label>
		<input type="number" id="Stock" name="Stock" class="form-control" required value="@Model?.Stock" />
	</div>

	<button type="submit" class="btn btn-primary">Add</button>
</form>

<a href="/MenuItem/Index">Back to list</a>