@model ProjectChapeau.Models.MenuItem

@{
	ViewData["Title"] = "Edit Menu Item";
	string? errorMessage = (string)ViewData["ErrorMessage"];
}
<h4>@errorMessage</h4>

<h2>Edit Menu Item</h2>

<form action="/MenuItem/Edit" method="POST">
	<input asp-for="MenuItemId" type="hidden"/>

	<div class="form-group py-2">
		<label asp-for="ItemName">Item Name:</label>
		<input asp-for="ItemName" type="text" class="form-control" required />
	</div>

	<div class="form-group py-2">
		<label asp-for="PriceExcludingVAT">Price (Excluding VAT):</label>
		<input asp-for="PriceExcludingVAT" class="form-control" type="number" step="0.01" required />
	</div>

	<div class="form-group py-2">
		<label asp-for="Stock">Stock:</label>
		<input asp-for="Stock" type="number" class="form-control" required />
	</div>
	<button type="submit" class="btn btn-primary">Edit</button>
</form>

<a href="/MenuItem/Index">Back to list</a>