@using ProjectChapeau.Models.ViewModel;
@model List<TableViewModel>


<div class="container py-4">
    <div class="row g-4 justify-content-center">
        @foreach (TableViewModel tableOrder in Model)
        {
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <a href="/Tables/Edit/@tableOrder.tableId" style="text-decoration: none; width:100%;">
                    <div class="card shadow rounded-3 border-0 @tableOrder.cardColor d-flex flex-column justify-content-center align-items-center text-center"
                         style="min-height: 200px; max-width: 320px; margin: 0 auto;">
                        <i class="bi bi-clock-history fs-2 mb-2" style="color: #222;"></i>
                        <div class="fs-4 mb-1">Table: @tableOrder.tableId</div>
                        <div class="fs-6 text-break">
                            Status:
                            <span class="fw-semibold">
                                    <span class="fw-bold">@tableOrder.status</span>
                            </span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>



                         