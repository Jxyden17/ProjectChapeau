<div class="mb-4">
    <label class="form-label">Categories</label>
    <div class="form-check">
        @foreach (Category category in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="category-@category.CategoryId" name="category-@category.CategoryId"/>
                <label class="form-check-label" for="category-@category.CategoryId">@category.CategoryName</label>
            </div>
        }
    </div>
</div>

<button class="btn btn-danger w-100 mt-3">Clear Filters</button>