@model List<ProjectChapeau.Models.Order>

@{
    ViewData["Title"] = "Running Orders";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-3">Running Orders</h2>
    <div>
        
        <button class="btn btn-outline-secondary" onclick="location.reload();">Refresh</button>
    </div>
 </div>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Table</th>
            <th scope="col">Order Time</th>
            <th scope="col">Waiting Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            TimeSpan waitingTime = DateTime.Now - order.OrderDateTime;

            <tr>
                <td>@order.Table.TableNumber</td>
                <td>@order.OrderDateTime.ToString("HH:mm")</td>
                <td>@string.Format("{0:%h}h {0:%m}m", waitingTime)</td>
            </tr>
        }
    </tbody>
</table>
