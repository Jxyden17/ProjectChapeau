@model ProjectChapeau.Models.Employee
@{
    ViewData["Title"] = "Create User";
}
<h1>@ViewData["Title"]</h1>

@{
    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
}
<h4>New User</h4>
<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="Employee's first name" required value="@Model?.firstName" />
    </div>

    <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Employee's last name" required value="@Model?.lastName" />
    </div>

    <div class="mb-3">
        <label for="userName" class="form-label">Username</label>
        <input type="text" id="userName" name="userName" class="form-control" placeholder="Your username" required value="@Model?.userName" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Your password" required value="@Model?.password" />
    </div>

    <div class="mb-3">
        <label class="form-label d-block">Is User Active?</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveTrue" value="True" required />
            <label class="form-check-label" for="IsActiveTrue">True</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsActive" id="IsActiveFalse" value="False" />
            <label class="form-check-label" for="IsActiveFalse">False</label>
        </div>
    </div>

    <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <input type="number" id="role" name="role" class="form-control" required min="1" max="5" value="@Model?.roleName" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/Employee/Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
