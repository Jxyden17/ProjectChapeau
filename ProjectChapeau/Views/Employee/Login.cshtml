@model ProjectChapeau.Models.Employee 
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

@{
    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
}
<form action="/Employee/Login" method="post">

    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="UserName" name="UserName" class="form-control" placeholder="Your name" required value="@Model?.userName" />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="text" id="Password" name="Password" class="form-control" placeholder="Your password" required value="@Model?.password" />
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

